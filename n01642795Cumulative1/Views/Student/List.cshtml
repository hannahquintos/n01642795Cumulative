@model IEnumerable<n01642795Cumulative1.Models.Student>
@{
    ViewBag.Title = "List";
}

<!--A view which uses server rendering to display students from the MySQL Database-->

<nav>
    <a href="/Teacher/List">Teachers</a>
    <a href="/Course/List">Classes</a>
    <a href="/Student/List">Students</a>
</nav>

<h2>Students</h2>

<!--search bar-->
<form action="/Student/List" method="GET">
    <input type="text" name="SearchKey" />
    <input type="submit" value="Search" />
</form>

@foreach (var student in Model)
{
    <div>
        <!--dynamic url to route to specific student page-->
        <a href="/Student/Show/@student.StudentId">
            <!--Student's first and last name as hyperlink-->
            @student.StudentNumber: @student.StudentFname @student.StudentLname
        </a>
    </div>
}